<idea-plugin>
    <id>com.github.idea-claude-code-gui</id>
    <name>Claude Code GUI</name>
    <vendor>CodeMossAI</vendor>

    <description><![CDATA[
        Claude Code GUI for IntelliJ IDEA - An AI-powered coding assistant that brings Claude Code Cli capabilities directly into your IDE.

        <h2>Features:</h2>
        <ul>
            <li>Integrated Claude Code Cli with intuitive GUI interface</li>
            <li>AI-powered code generation and explanation</li>
            <li>Smart context-aware code suggestions</li>
            <li>Send selected code directly to Claude for analysis</li>
            <li>Seamless integration with IntelliJ IDEA</li>
        </ul>

        <br/>
        <img src="META-INF/demo.png" alt="Claude Code GUI Demo" width="700"/>

        <h2>How to Use:</h2>
        <ul>
            <li>Open the Claude Code GUI tool window from the right sidebar</li>
            <li>Get instant AI-powered code assistance and suggestions</li>
        </ul>
    ]]></description>

    <!-- Search keywords for JetBrains Marketplace -->
    <tags>
        <tag>claude</tag>
        <tag>ai</tag>
        <tag>assistant</tag>
        <tag>code-generation</tag>
        <tag>productivity</tag>
        <tag>ai-coding</tag>
        <tag>claude-code</tag>
        <tag>claude-code-gui</tag>
        <tag>claude code gui</tag>
    </tags>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Claude Code GUI 工具窗口（包含历史记录功能） -->
        <toolWindow id="Claude Code GUI"
                    anchor="right"
                    factoryClass="com.github.claudecodegui.ClaudeSDKToolWindow"
                    icon="/icons/cc-gui-icon.svg"/>
    </extensions>

    <actions>
        <!-- 发送选中代码到终端的Action -->
        <action id="ClaudeCodeGUI.SendSelectionToTerminalAction"
                class="com.github.claudecodegui.SendSelectionToTerminalAction"
                text="发送选中代码到GUI插件"
                description="将当前选中的代码信息和路径发送到终端窗口"
                icon="/icons/send-to-terminal.svg">
            <!-- 添加到编辑器右键菜单（CutCopyPasteGroup后面） -->
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CutCopyPasteGroup"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt K"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt K"/>
            <keyboard-shortcut keymap="macOS" first-keystroke="meta alt K"/>
        </action>
    </actions>
</idea-plugin>
